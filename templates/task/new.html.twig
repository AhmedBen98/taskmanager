{% extends 'base.html.twig' %}

{% block title %}Nouvelle t√¢che{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/starability/starability-all.min.css">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header text-white fw-bold" style="background: linear-gradient(to right, #f73587, #ffa726);">
            <i class="bi bi-plus-circle"></i> Nouvelle T√¢che
        </div>
        <div class="card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.isDone, { 'attr': {'class': 'form-check-input'} }) }}
                {{ form_label(form.isDone, null, { 'label_attr': {'class': 'form-check-label'} }) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.createdAt) }}
                {{ form_widget(form.createdAt, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.difficulty) }}
                <div class="starability-basic">
                    {{ form_widget(form.difficulty) }}
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ path('app_task_index') }}" class="btn btn-outline-secondary">
                    ‚Üê Retour √† la liste
                </a>
                <button class="btn text-white" style="background: linear-gradient(to right, #f73587, #ffa726);">
                    üíæ Enregistrer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
