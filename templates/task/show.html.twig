{% extends 'base.html.twig' %}

{% block title %}Détail de la tâche{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header text-white fw-bold" style="background: linear-gradient(90deg, #f73587, #ffa726);">
            📄 Détails de la tâche
        </div>
        <div class="card-body">
            <table class="table table-striped align-middle">
                <tbody>
                    <tr>
                        <th>🆔 Id</th>
                        <td>{{ task.id }}</td>
                    </tr>
                    <tr>
                        <th>📌 Titre</th>
                        <td>{{ task.title }}</td>
                    </tr>
                    <tr>
                        <th>📝 Description</th>
                        <td>{{ task.description }}</td>
                    </tr>
                    <tr>
                        <th>✅ Terminée</th>
                        <td>
                            {% if task.isDone %}
                                <span class="badge bg-success">Oui</span>
                            {% else %}
                                <span class="badge bg-secondary">Non</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>📅 Date de création</th>
                        <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i') : '—' }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_task_index') }}" class="btn btn-outline-dark">
                    ← Retour à la liste
                </a>

                <div class="d-flex gap-2">
                    <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-outline-primary">
                        ✏️ Modifier
                    </a>
                    {{ include('task/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
