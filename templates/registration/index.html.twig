{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<style>
    .jems-form {
        background: white;
        border: 2px solid #f73587;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
    }

    .jems-btn {
        background: #f73587;
        border: none;
        font-weight: bold;
    }

    .jems-btn:hover {
        background: #ff8a00;
    }

    .jems-link {
        color: #f73587;
        font-weight: bold;
    }

    .jems-link:hover {
        color: #ff8a00;
        text-decoration: underline;
    }
</style>

<h1 class="text-center mt-5 fw-bold">Créer un compte</h1>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        {{ form_start(registrationForm, {'attr': {'class': 'jems-form'}}) }}

            <div class="mb-3">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.password.first) }}
                {{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.password.first) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.password.second) }}
                {{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.password.second) }}
            </div>

            <button type="submit" class="btn jems-btn text-white w-100 mt-3">Créer mon compte</button>

        {{ form_end(registrationForm) }}

        <div class="text-center mt-3">
            <a class="jems-link" href="{{ path('app_login') }}">Déjà inscrit ? Se connecter</a>
        </div>
    </div>
</div>
{% endblock %}
